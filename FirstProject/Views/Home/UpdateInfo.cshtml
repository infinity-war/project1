@model IEnumerable<FirstProject.Models.Information>

@{
    ViewBag.Title = "UpdateInfo";
}
<div class="row">
    <div class="col-md-12">
        <div class="content-box-large" style="width: fit-content;">
            <div class="panel-heading">
                <div class="panel-title "><b>Update Information</b></div>
            </div>
            <div class="panel-body">
                
                <table class="table table-striped table-bordered">
                    <tr>
                        <th>Action</th>
                        <th>
                            @Html.DisplayNameFor(model => model.Salutation)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Title)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.FirstName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.BusinessPhone)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.MobilePhone)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.FunctionalDepartment)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.DepartmentRole)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Email)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.InstitutionName1)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.InstitutionName2)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Street1)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.StreetNo)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.PostalCode)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.City)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Country)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.State)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.OtherComment)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.LeadOriginator)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.SourceCampaign)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Currency)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Lead.Fname)
                        </th>

                    </tr>

                    @foreach (var item in Model)
                    {
                    <tr>
                        <td>
                            @Html.ActionLink(" ", "EditInfo", new { id = item.Id }, new { @class = "glyphicon glyphicon-edit", @title = "Edit" , @style = "text-decoration:none;" }) |
                            @Html.ActionLink(" ", "DeleteInfo", new { id = item.Id }, new { @class = "glyphicon glyphicon-trash", @title = "Delete", @style = "text-decoration:none;" })
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Salutation)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Title)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.FirstName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.BusinessPhone)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.MobilePhone)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.FunctionalDepartment)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DepartmentRole)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Email)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.InstitutionName1)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.InstitutionName2)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Street1)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.StreetNo)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.PostalCode)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.City)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Country)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.State)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.OtherComment)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.LeadOriginator)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.SourceCampaign)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Currency)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Lead.Fname)
                        </td>

                    </tr>
                    }

                </table>
            </div>
        </div>

    </div>
</div>
